{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx", // Add this line to support JSX
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx", // Add this line to include JSX files
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/index.jsx" // Ensure this JSX file is included
  ]
}